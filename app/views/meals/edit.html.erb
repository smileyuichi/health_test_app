<%= form_with model: @meal, url:user_meal_path(current_user.id, @meal.id), method: :patch do |form| %>
    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <span class="input-group-text">料理名</span>
        </div>
        <%= form.text_field :meal_name, class: 'form-control', id: "newMealName", required: true %>
    </div>
    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <span class="input-group-text">カロリー</span>
        </div>
        <%= form.number_field :calorie, class: 'form-control', id: "newCalorie", readonly: true %>kcal
    </div>
    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <span class="input-group-text">タンパク質</span>
        </div>
        <%= form.number_field :protein, class: 'form-control', id: "newProtein", required: true %>g
    </div>
    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <span class="input-group-text">脂質</span>
        </div>
        <%= form.number_field :fat, class: 'form-control', id: "newFat", required: true %>g
    </div>    
    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <span class="input-group-text">炭水化物</span>
        </div>
        <%= form.number_field :carbo, class: 'form-control', id: "newCarbo", required: true %>g
    </div>
    <div class="form-group mt-3">
        <%= form.submit '編集する', class: 'btn btn-primary btn-block', id: 'newButton' %>
        <hr>
        <%= form.submit '削除', name: '_destroy', class: 'btn btn-danger btn-block', id: 'destroy-button', data: { confirm: "本当に記録を削除しますか？" } %>
    </div>
<% end %>

<h1 class="text-center">お気に入りの食事</h1>
<div class="table-responsive">
    <table class="table table-striped text-center">
        <thead class="thead-light">
            <tr><th>料理名</th><th>お気に入り</th><th>カロリー</th><th>タンパク質</th><th>脂質</th><th>炭水化物</th></tr>
        </thead>
        <%= render partial: 'meals/new_edit_table' %>
    </table>
</div>
